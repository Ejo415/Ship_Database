<h1>Edit a Crew Member</h1>

<form action="/crew/<%=@crew.id%>" method="POST">
<input type="hidden" name="_method" value="patch">
  <label> Name </label>
  <input type="text" name="name" value="<%= @crew.name %>"> </br>

  <label> Rank </label>
  <input type="text" name="rank" value="<%= @crew.rank %>"> </br>

  <label> Species </label>
  <input type="text" name="species" value="<%= @crew.species %>"> </br>

  <label> Affiliation </label>
  <input type="text" name="affiliation" value="<%= @crew.affiliation %>"> </br>

  <input type="submit" value="Edit">
</form>

<a href="/"> Home </a>